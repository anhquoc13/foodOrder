<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/pizza"
            android:paddingTop="0dp"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight=".5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:text="Size"></TextView>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp">

                    <RadioButton
                        android:id="@+id/rbLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Large" />

                    <RadioButton
                        android:id="@+id/rbMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Medium" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight=".5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:text="Crust"></TextView>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp">

                    <RadioButton
                        android:id="@+id/rbThick"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thick" />

                    <RadioButton
                        android:id="@+id/rbThin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thin" />
                </RadioGroup>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="Topping"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight=".5"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cbCF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Crayfish" />

<!--                <CheckBox-->
<!--                    android:id="@+id/cbLobster"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Lobster" />-->

                <CheckBox
                    android:id="@+id/cbShrimps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shrimps" />

                <CheckBox
                    android:id="@+id/cbMozzarella"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mozzarella" />

                <CheckBox
                    android:id="@+id/cbTurkey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Turkey" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight=".5"
                android:orientation="vertical">

                <CheckBox

                    android:id="@+id/cbham"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ham"
                    tools:ignore="InvalidId" />

                <CheckBox
                    android:id="@+id/cbMeatballs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Meatballs" />

                <CheckBox
                    android:id="@+id/cbBBQChick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BBQ Chicken" />

                <CheckBox
                    android:id="@+id/cbBacon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bacon" />

<!--                <CheckBox-->
<!--                    android:id="@+id/cbFungi"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Fungi" />-->
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="Beverage"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight=".5"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cbMargarita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Margarita"
                    tools:ignore="InvalidId" />

                <CheckBox
                    android:id="@+id/cbCerveza"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cerveza"
                    tools:ignore="InvalidId" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight=".5"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cbSoda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Soda"
                    tools:ignore="InvalidId" />

                <CheckBox
                    android:id="@+id/cbTequilla"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tequilla"
                    tools:ignore="InvalidId" />
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight=".5"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:text="PLACE YOUR ORDER"></Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight=".5"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/teal_700"
                    android:text="OUR ADDRESS"></Button>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>